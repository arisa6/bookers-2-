<% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>


<p id="noitice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class= "col-md-3">
      <h2>User info</h2>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
           </tbody>
          </table>
            <div class="">
              <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_22778" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
           <!-- form_with部分 -->
      <%= form_with model: @book, url: books_path do |f| %>
        <h2>New book</h2>
          <form action="/books" accept-charset="UTF-8" method="post">
                <label for="book_title">Title</label>
                    <%= f.text_field :title,class: "form-control book_title" %>
                 <label for="book_opinion">Opinion</label>
              <%= f.text_area :body,class: "form-control book_body" %>
            <%= f.submit 'Create Book',class: "btn btn-success" %>
          </form>
      <% end %>
  </div>
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
             <tr>
               <th>Title</th>
                  <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
            </thead>
           <tbody>
             <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(book.user_id) do %>
                 <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                </td>
             <% end %>
               <td><%=link_to book.title, book_path(book.id)%></td>
                 <td><%= book.body %></td>
              </tr>
            <% end %>
           </tbody>
         </table>
    </div>
   </div>
 </div>
