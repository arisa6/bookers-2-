 <% if @user.errors %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= form_with model: @user, url: user_path(current_user.id) do |f| %>
             <h2>User   info</h2>
                <h4>Name</h4>
                 <%= f.text_field :name, class:"form-control name"%>
                   <h4>Image</h4>
                  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>  
                <h4>introduction</h4>
              <%= f.text_area :introduction, class:"form-control introduction"%>
            <%= f.submit 'Update User', class:"btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>
